<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/initial_questions/new", class: "d-none d-lg-block me-3" do %>
      <%= image_tag "logo.png", width: 70, height: 50, alt: "Logo" %>
    <% end %>

    <!-- Centered FORGE Heading -->
    <%= link_to root_path, class: "navbar-title-link" do %>
      <h1 class="navbar-title">FORGE</h1>
    <% end %>

    <div>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item align-button">
            <%= link_to "Generate", "/initial_questions/new", class: "btn_nav d-none d-md-inline-block" %>
          </li>
          <li class="nav-item align-button">
            <%= link_to "Ideas", "/ideas", class: "btn_nav d-none d-md-inline-block" %>
          </li>
          <li class="nav-item align-button">
            <%= link_to "Feed", "/posts", class: "btn_nav d-none d-md-inline-block" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= cl_image_tag current_user.avatar.key, width: 50, height: 50, crop: :thumb, gravity: :face, class: "avatar", alt: "User avatar" %>
              <% else %>
                <%= image_tag "Avatar_placeholder.png", width: 50, height: 50, class: "avatar", alt: "User avatar placeholder" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <!-- Mobile/tablet only nav links -->
              <div class="d-md-none">
                <%= link_to "Generate", "/initial_questions/new", class: "dropdown-item" %>
                <%= link_to "Ideas", "/ideas", class: "dropdown-item" %>
                <%= link_to "Feed", "/posts", class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
              </div>

              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
